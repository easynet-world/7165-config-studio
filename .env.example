# üñ•Ô∏è Server Configuration
# Port number for the chat server (required, type:number, min:1, max:65535)
CHAT_SERVER_PORT=9992
# URL of your n8n-local API (required, type:url) - see https://docs.n8n.io for documentation
N8N_API_URL=http://127.0.0.1:9991
# Server hostname (required, pattern:^[a-zA-Z0-9.-]+$)
SERVER_HOST=localhost
# Enable HTTPS (enum:true|false)
ENABLE_HTTPS=false

# üì¶ Storage Settings
# Storage directory path (required)
STORAGE_PATH=/var/storage
# Maximum storage size in GB (type:number, min:1, max:10000)
STORAGE_MAX_SIZE=100
# Storage provider (enum:local|s3|azure|gcs)
STORAGE_PROVIDER=local
# Enable compression (enum:true|false)
STORAGE_COMPRESS=true

# ‚è∞ Tokens Configuration
# Token expiration time in seconds (type:number, min:0, max:86400)
TOKEN_EXPIRY=3600
# Secret key for token generation (required, pattern:^[A-Za-z0-9+/=]{32,}$)
TOKEN_SECRET=your-secret-key-here-change-this-in-production
# Refresh token expiry in days (type:number, min:1, max:365)
REFRESH_TOKEN_EXPIRY=30

# üìÑ Summarizer Options
# AI model to use for summarization (enum:gpt-4|gpt-3.5-turbo|claude-3|llama-2)
SUMMARIZER_MODEL=gpt-4
# Maximum tokens for summarization (type:number, min:100, max:4000)
SUMMARIZER_MAX_TOKENS=2000
# Temperature for AI responses (type:number, min:0, max:2)
SUMMARIZER_TEMPERATURE=0.7
# API endpoint for summarizer service (type:url)
SUMMARIZER_API_URL=https://api.openai.com/v1/chat/completions

# üîÑ Workflow Configuration
# Workflow execution timeout in milliseconds (type:number, min:1000, max:300000)
WORKFLOW_TIMEOUT=30000
# Maximum number of retries (type:number, min:0, max:10)
WORKFLOW_MAX_RETRIES=3
# Enable workflow logging (enum:true|false)
WORKFLOW_ENABLE_LOGGING=true
# Workflow queue name (pattern:^[a-z0-9-]+$)
WORKFLOW_QUEUE_NAME=default-queue

# üîê Authentication Settings
# Admin email address (required, type:email)
ADMIN_EMAIL=admin@example.com
# Session timeout in minutes (type:number, min:5, max:1440)
SESSION_TIMEOUT=60
# Enable two-factor authentication (enum:true|false)
ENABLE_2FA=false
# Password minimum length (type:number, min:8, max:128)
PASSWORD_MIN_LENGTH=12

# üåê API Configuration
# API base URL (required, type:url)
API_BASE_URL=https://api.example.com
# API version (enum:v1|v2|v3)
API_VERSION=v1
# API rate limit per minute (type:number, min:1, max:10000)
API_RATE_LIMIT=1000
# Enable API documentation (enum:true|false)
API_ENABLE_DOCS=true

# üìä Database Options
# Database connection string (required, type:url)
DATABASE_URL=postgresql://user:password@localhost:5432/mydb
# Database connection pool size (type:number, min:1, max:100)
DB_POOL_SIZE=10
# Database query timeout in seconds (type:number, min:1, max:300)
DB_QUERY_TIMEOUT=30
# Enable database migrations (enum:true|false)
DB_AUTO_MIGRATE=true

# üìß Email Configuration
# SMTP server hostname (required)
SMTP_HOST=smtp.gmail.com
# SMTP server port (type:number, min:1, max:65535)
SMTP_PORT=587
# SMTP username (required)
SMTP_USER=your-email@gmail.com
# SMTP password (required)
SMTP_PASSWORD=your-app-password
# Enable TLS (enum:true|false)
SMTP_TLS=true
# From email address (required, type:email)
EMAIL_FROM=noreply@example.com

# üîç Logging Settings
# Log level (enum:debug|info|warn|error)
LOG_LEVEL=info
# Log file path
LOG_FILE_PATH=/var/logs/app.log
# Maximum log file size in MB (type:number, min:1, max:1000)
LOG_MAX_SIZE=100
# Number of log files to keep (type:number, min:1, max:100)
LOG_MAX_FILES=10
