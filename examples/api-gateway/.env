# API Gateway Configuration

# Gateway Settings
# Gateway server port (type:number, min:1, max:65535)
GATEWAY_PORT=8080
# Gateway server host address (required)
GATEWAY_HOST=0.0.0.0
# API version identifier (required)
API_VERSION=v1

# Rate Limiting
# Enable rate limiting (enum:true|false)
RATE_LIMIT_ENABLED=true
# Maximum requests per window (type:number, min:1)
RATE_LIMIT_MAX=1000
# Rate limit window in milliseconds (type:number, min:1000)
RATE_LIMIT_WINDOW=60000

# Authentication
# JWT secret key for token signing (required)
JWT_SECRET=your-jwt-secret-key
# JWT token expiry time in seconds (type:number, min:60)
JWT_EXPIRY=3600
# Refresh token expiry time in seconds (type:number, min:3600)
REFRESH_TOKEN_EXPIRY=86400

# Upstream Services
# Authentication service URL (required, type:url)
UPSTREAM_AUTH=http://localhost:3001
# User service URL (required, type:url)
UPSTREAM_USER=http://localhost:3002
# Order service URL (required, type:url)
UPSTREAM_ORDER=http://localhost:3003

# CORS Configuration
# Allowed CORS origin (required, type:url)
CORS_ORIGIN=http://localhost:3000
# Allow credentials in CORS requests (enum:true|false)
CORS_CREDENTIALS=true

# Health Check
# Health check interval in milliseconds (type:number, min:1000)
HEALTH_CHECK_INTERVAL=30000
# Health check timeout in milliseconds (type:number, min:1000)
HEALTH_CHECK_TIMEOUT=5000
