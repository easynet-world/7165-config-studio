# Web Application Configuration

# Server Settings
# Server port number (type:number, min:1, max:65535)
SERVER_PORT=3000
# Server host address (required)
SERVER_HOST=localhost
# Node.js environment (enum:development|production|test)
NODE_ENV=development

# Database Configuration
# Database connection URL (required, type:url)
DATABASE_URL=postgresql://user:password@localhost:5432/webapp_db
# Database connection pool size (type:number, min:1, max:100)
DB_POOL_SIZE=10
# Database connection timeout in milliseconds (type:number, min:1000)
DB_TIMEOUT=30000

# Session Configuration
# Session secret key for encryption (required)
SESSION_SECRET=your-secret-key-change-in-production
# Session timeout in seconds (type:number, min:60)
SESSION_TIMEOUT=3600
# Enable secure cookies (enum:true|false)
COOKIE_SECURE=false

# Logging
# Log level (enum:debug|info|warn|error)
LOG_LEVEL=info
# Log file path (required)
LOG_FILE=logs/webapp.log
